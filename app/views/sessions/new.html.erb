<h1 align="center">Login</h1>

<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", placeholder: "", autofocus: true %>
    </div>
  </div>


  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :password %><br />
    </div>
    <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", autocomplete: "off" %>
    </div>
  </div>

  <!-- Buttons -->
  <div class="form-group ">
    <div class="col-md-12">
      <%= f.submit "Login", class: "btn btn-success btn-lg col-md-offset-2 button-create" %>
      <a href="/signup" class="btn btn-danger btn-lg button-cancel">Sign up</a>
    </div>
  </div>
<% end %>
