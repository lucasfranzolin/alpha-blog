<h1 align="center">Listing all articles</h1>
<div class="container" align="center">
  <table>
    <tr>
      <th>Title</th>
      <th>Description</th>
    </tr>

    <% @articles.each do |a| %>
      <tr>
        <td><%= a.title %></td>
        <td><%= a.description %></td>
        <td><%= link_to "Show", article_path(a) %></td>
        <td><%= link_to "Delete", article_path(a), method: :delete, data: {confirm: "Are you sure?" } %></td>
      <tr>
    <% end %>

  </table>

  <div class="col-md-12">
    <a href="/articles/new" class="btn btn-primary btn-lg button-new">New</a>
  </div>
</div>
