<%= render 'shared/errors', obj: @article %>

<div class ="row">
  <div class="col-xs-12">

      <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
        <!-- Title -->
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control", placeholder: "", autofocus: true %>
          </div>
        </div>

        <!-- Description -->
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description %><br />
          </div>
          <div class="col-sm-10">
            <%= f.text_area :description, rows: 5, class: "form-control", placeholder: "" %>
          </div>
        </div>

        <!-- Categories -->
        <div class="form-group ">
          <div class="row col-md-12 col-md-offset-2">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
        </div>

        <!-- Buttons -->
        <div class="form-group ">
          <div class="col-md-12">
            <%= f.submit class: "btn btn-success btn-lg col-md-offset-2 button-create" %>
            <a href="/articles" class="btn btn-danger btn-lg button-cancel">Cancel</a>
          </div>
        </div>
      <% end %>

  </div>
</div>
